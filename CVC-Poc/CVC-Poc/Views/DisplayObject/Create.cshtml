@model CVC_Poc.Models.ViewModels.DisplayObjectVm
@{
    ViewData["Title"] = "Add Display Objects";
    Layout = "_Dashboard";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <form method="post" class="form-horizontal col-12" enctype="multipart/form-data" asp-controller="DisplayObject" asp-action="Create">
                <div class="card-body">
                    <div class="form-group row">
                        <label for="Name" class="col-sm-3 col-form-label">Name</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" asp-for="Name" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="UserId" class="col-sm-3 col-form-label">Customer</label>
                        <div class="col-sm-6">
                            @*<input type="text" class="form-control" asp-for="UserId" />*@
                            <select asp-for="UserId" class="form-control" asp-items="Model.CustomersList"></select>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="TypeVal" class="col-sm-3 col-form-label">Type</label>
                        <div class="col-sm-6">
                            <select asp-for="TypeVal" class="form-control" asp-items="Model.Types"></select>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="Fields" class="col-sm-3 col-form-label">Fields</label>
                        <div class="col-sm-6">
                            <select asp-for="Fields" class="form-control" asp-items="Model.FieldList"></select>
                        </div>
                    </div>                    
                </div>

                <div class="card-footer col-sm-9">
                    <button type="submit" class="btn btn-info">Save</button>
                    <a href="@Url.Action("Index")" class="btn btn-default">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>